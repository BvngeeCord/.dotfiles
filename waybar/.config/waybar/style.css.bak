window#waybar {
    background: transparent;
}

#window {
    margin-left: 60px;
    margin-right: 60px;
}

tooltip {
    background: #1e1e2e;
    color: #ffead3; /* text color not working for some reason?*/

    /*opacity: 0;
    animation: fadeIn 0.2s;
    animation-direction: alternate;*/
